@model IEnumerable<ChanceDays2.Models.User>

@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    var root = '@Request.Url.Authority' + '@Url.Content("~/")';
    console.log(root);

    $(document).ready(function () {
        var url = '@Url.Action("SearchAll", "User")';
        searchAllUsers($("#searchVal").val(), url, root);

        $("#searchButton").click(function (event) {
            event.preventDefault();
            searchAllUsers($("#searchVal").val(), url, root);
        });

        $("#searchVal").keypress(function (event) {
            if (event.keyCode == 13) {
                searchAllUsers($("#searchVal").val(), url, root);
            }
        });


    });
</script>

<div class="row">
    <div class="col-lg-12">
        <h3 class="pull-left">All Users</h3>
        <div class="input-group pull-right col-lg-4">
            <input id="searchVal" type="text" class="form-control">
            <span class="input-group-btn">
                <button id="searchButton" class="btn btn-default" type="button">Search</button>
            </span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <table class="table table-hover well">
            <thead>
                <tr>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Office</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody id="displaySearch">

            </tbody>
        </table>

    </div>
    <div class="col-lg-4">
        <div id="waitImage" class="center" style="width: 200px; z-index: 1050;">
            <div class="progress progress-striped active">
                <div class="progress-bar" role="progressbar" style="width: 100%"></div>
            </div>
        </div>
    </div>
</div>
