@model IEnumerable<ChanceDays2.Models.Project>

@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
    $(document).ready(function () {
        var url = '@Url.Action("SearchAll", "Project")';
        searchAllProjects($("#searchVal").val(), url, 1, 10);

        $("#searchButton").click(function (event) {
            event.preventDefault();
            searchAllProjects($("#searchVal").val(), url, 1, 10);
        });

        $("#searchVal").keypress(function (event) {
            if (event.keyCode == 13) {
                searchAllProjects($("#searchVal").val(), url, 1, 10);
            }
        });

        $("#createProject").click(function (event) {
            var url = '@Url.Action("Create", "Project")';
            window.location.href = url;
        });
    });
</script>

<div class="row">
    <div class="col-lg-12">
        <h3 class="pull-left">All Projects</h3>
        <div class="input-group pull-right col-lg-4">
            <input id="searchVal" type="text" class="form-control">
            <span class="input-group-btn">
                <button id="searchButton" class="btn btn-default" type="button">Search</button>
            </span>

        </div>
        <button id="createProject" class="btn btn-primary pull-right" type="button">Create New Project</button>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <table class="table table-hover well">
            <thead>
                <tr>
                    <th>Project Name</th>
                    <th>Chance Day</th>
                    <th>Chance Day Step</th>
                    <th>Feedback Collection</th>
                </tr>
            </thead>
            <tbody id="displaySearch">

            </tbody>
        </table>
        <div id="pagination" class="col-lg-offset-2">

        </div>
    </div>
    <div class="col-lg-4">
        <div id="waitImage" class="center" style="width: 200px; z-index: 1050;">
            <div class="progress progress-striped active">
                <div class="progress-bar" role="progressbar" style="width: 100%"></div>
            </div>
        </div>
    </div>
</div>